#!/bin/bash

cd ..

dir=`pwd`

export CC=gcc
export CXX=g++

export LANG=C

export CXXFLAGS="-pedantic -ggdb3 -O3 -pipe -ffast-math \
-D_FORTIFY_SOURCE=2 \
-std=gnu++1z \
-fno-var-tracking"

source ./build/gcc6flags.sh

autoreconf -i
./configure --prefix=$dir/run \
--datadir=$dir/run/share/games \
--bindir=$dir/run/bin \
--mandir=$dir/run/share/man \
--enable-memdebug=no \
--enable-tcmalloc=no \
--enable-googleprofiler=no \
--enable-werror

cd po
make -j8 update-gmo 2>../build/make1.log
cd ..
make -j8 2>build/make2.log

